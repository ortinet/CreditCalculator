@model CreditCalculator.Models.AdvancedCreditInfo
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form method="post">
    <div>
        <p>
            <label asp-for="Sum">Сумма</label><br />
            <input type="text" asp-for="Sum" /> 
            <span asp-validation-for="Sum"  />
        </p>
        <p>
            <label asp-for="Duration">Срок (в днях)</label><br />
            <input type="text" asp-for="Duration" />
            <span asp-validation-for="Duration"  />
        </p>
        <p>
            <label asp-for="Rate">Дневная ставка</label><br />
            <input asp-for="Rate" />
            <span asp-validation-for="Rate"  />
        </p>
        <p>
            <label asp-for="PaymentStep">Шаг платежа (в днях)</label><br />
            <input type="text" asp-for="PaymentStep" />
            <span asp-validation-for="PaymentStep"  />
        </p>
        <p>
            <input type="submit" value="Рассчитать"  />
        </p>

        <div asp-validation-summary="ModelOnly"></div>

    </div>
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>